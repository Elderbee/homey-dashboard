    function loadWidget() {
      fsUpcoming('params', { teamID: 367, lang: 'nl', containerID: 'fs-upcoming-367' });
    }

    (function (w,d,s,o,f,js,fjs) {
      w['fsUpcomingEmbed']=o;
      w[o] = w[o] || function () {
        (w[o].q = w[o].q || []).push(arguments)
      };
      js = d.createElement(s);
      fjs = d.getElementsByTagName(s)[0];
      js.id = o;
      js.src = f;
      js.async = 1;
      js.onload = loadWidget;
      fjs.parentNode.insertBefore(js, fjs);
    }(window, document, 'script', 'fsUpcoming', 'https://cdn.footystats.org/embeds/upcoming-loc.js'));
  </script>
